typedef Chandef {
	chan sync = [0] of {bool};
	chan enq = [0] of {int};
	chan deq = [0] of {bool,int};
	chan sending = [0] of {bool};
	chan rcving = [0] of {bool};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}
typedef Wgdef {
	chan update = [0] of {int};
	chan wait = [0] of {int};
	int Counter = 0;}
typedef Mutexdef {
	chan Lock = [0] of {bool};
	chan Unlock = [0] of {bool};
	chan RLock = [0] of {bool};
	chan RUnlock = [0] of {bool};
	int Counter = 0;}



init { 
	chan child_TestBuildParallel_21190 = [1] of {int};
	run TestBuildParallel_2119(child_TestBuildParallel_21190)
stop_process:skip
}

proctype TestBuildParallel_2119(chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Mutexdef wg_errOnce_m;
	Wgdef wg_wg;
	Chandef locked_unlock;
	Wgdef b_wg;
	run wgMonitor(b_wg);
	run sync_monitor(locked_unlock);
	run wgMonitor(wg_wg);
	run mutexMonitor(wg_errOnce_m);
	locked_unlock.closing!true;
	stop_process: skip;
	child!0
}

