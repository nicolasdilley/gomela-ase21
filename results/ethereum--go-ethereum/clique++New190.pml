
// https://github.com/ethereum/go-ethereum/blob/master/consensus/clique/clique.go#L190
typedef Mutexdef {
	chan Lock = [0] of {bool};
	chan Unlock = [0] of {bool};
	chan RLock = [0] of {bool};
	chan RUnlock = [0] of {bool};
	int Counter = 0;}



init { 
	chan child_New1900 = [1] of {int};
	run New190(child_New1900)
stop_process:skip
}

proctype New190(chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Mutexdef signatures_lock;
	Mutexdef recents_lock;
	run mutexMonitor(recents_lock);
	run mutexMonitor(signatures_lock);
	goto stop_process;
	stop_process: skip;
	child!0
}

 /* ================================================================================== */
