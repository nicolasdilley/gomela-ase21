#define TestADSC_Run_tests  0

// https://github.com/istio/istio/blob/master/pkg/adsc/adsc_test.go#L55
typedef Chandef {
	chan sync = [0] of {bool};
	chan enq = [0] of {int};
	chan deq = [0] of {bool,int};
	chan sending = [0] of {bool};
	chan rcving = [0] of {bool};
	chan closing = [0] of {bool};
	int size = 0;
	int num_msgs = 0;
	bool closed = false;
}



init { 
	chan child_TestADSC_Run550 = [1] of {int};
	run TestADSC_Run55(child_TestADSC_Run550)
stop_process:skip
}

proctype TestADSC_Run55(chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Chandef tests_inAdsc_XDSUpdates;
	Chandef tests_inAdsc_Updates;
	Chandef tests_inAdsc_XDSUpdates;
	Chandef tests_inAdsc_Updates;
	int tests = TestADSC_Run_tests;
	run sync_monitor(tests_inAdsc_Updates);
	run sync_monitor(tests_inAdsc_XDSUpdates);
	run sync_monitor(tests_inAdsc_Updates);
	run sync_monitor(tests_inAdsc_XDSUpdates);
	do
	:: true -> 
		

		if
		:: tests_inAdsc_Updates.deq?state,num_msgs;
		:: tests_inAdsc_Updates.sync?state -> 
			tests_inAdsc_Updates.rcving!false
		fi;
		

		if
		:: state && num_msgs <= 0 -> 
			break
		:: else -> 
			for10: skip;
			for10_end: skip
		fi
	od;
	for10_exit: skip;
	stop_process: skip;
	child!0
}

