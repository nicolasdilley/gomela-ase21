init { 
	chan child_HashLister9590 = [1] of {int};
	run HashLister959(ctx959,child_HashLister9590)
stop_process:skip
}

proctype HashLister959(int ctx;chan child) {
	bool closed; 
	int i;
	bool state;
	int num_msgs;
	Wgdef wg;
	Chandef concurrencyControl;
	int fs_GetConfig_Transfers = HashLister_fs_GetConfig_Transfers;
	

	if
	:: fs_GetConfig_Transfers > 0 -> 
		concurrencyControl.size = fs_GetConfig_Transfers;
		run AsyncChan(concurrencyControl)
	:: else -> 
		run sync_monitor(concurrencyControl)
	fi;
	run wgMonitor(wg);
	wg.wait?0;
	goto stop_process;
	stop_process: skip;
	child!0
}

